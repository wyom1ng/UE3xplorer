<Window x:Class="ue3explorer.TextureViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ue3explorer"
        xmlns:directX="clr-namespace:Microsoft.Wpf.Interop.DirectX;assembly=Microsoft.Wpf.Interop.DirectX"
        mc:Ignorable="d"
        Title="UE3xplorer- Texture" Height="450" Width="800">
    <Grid x:Name="ImageGrid">
        <Image x:Name="ImageHost" Stretch="Fill">
            <Image.Source>
                <directX:D3D11Image x:Name="InteropImage"/>
            </Image.Source>
        </Image>
    </Grid>
</Window>
